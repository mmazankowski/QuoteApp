@{
    ViewData["Title"] = "Delete Quote";
}

@model Quote

<h1 class="text-center">Confirm Quote Deletion</h1>
<h3>Are you sure you want to delete the record for @Model.TheQuote?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <a asp-controller="Home" asp-action="Index" type="btn btn-primary">Cancel</a><br />
    <button type="submit">Delete</button>

    <input type="hidden" asp-for="QuoteId" />
</form>
