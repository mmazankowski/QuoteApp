@{
    ViewData["Title"] = "Quote Form";
}


@model Quote

<h1>Add a Quote</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="TheQuote">Quote: </label>
            <input asp-for="TheQuote" class="form-control" /><br />
        </div>

        <div class="form-group">
            <label asp-for="Author">Author: </label>
            <input asp-for="Author" class="form-control" /><br />
        </div>

        <div class="form-group">
            <label asp-for="Date">Date: </label>
            <input asp-for="Date" class="form-control" /><br />
        </div>

        <div class="form-group">
            <label asp-for="Subject">Subject: </label>
            <input asp-for="Subject" class="form-control" /><br />
        </div>

        <div class="form-group">
            <label asp-for="Citation">Citation: </label>
            <input asp-for="Citation" class="form-control" /><br />
        </div>

        <div class="float-end">
            <input class="btn btn-primary" type="submit" value="Confirm" />
        </div>
    </form>
</div>